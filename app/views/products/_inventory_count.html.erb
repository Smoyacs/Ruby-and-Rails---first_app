<% if product.inventory_count? %>
  <p>
    <%= product.inventory_count %> in strock
  </p>
<% else %>
  <p>Out of stock</p>
  <p>Email me when avaible.</p>

  <%= form_with model: [product, Subscriber.new] do |form| %>
    <%= form.email_field :email, placeholder: "u@example.com", required: true %>
    <%= form.submit "Subscribe" %>
  <% end %>
<% end %>
